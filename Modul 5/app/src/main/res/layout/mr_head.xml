<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MrHeadActivity">

    <ImageView
        android:id="@+id/imageKepala"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:src="@drawable/body"
        android:contentDescription="Kepala"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:visibility="visible" />

    <CheckBox
        android:id="@+id/kepala"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kepala"
        app:layout_constraintTop_toBottomOf="@+id/imageKepala"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:checked="true" />

    <ImageView
        android:id="@+id/imageRambut"
        android:layout_width="114dp"
        android:layout_height="104dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/hair"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/rambut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rambut"
        app:layout_constraintTop_toBottomOf="@+id/kepala"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:checked="true" />

    <ImageView
        android:id="@+id/imageAlis"
        android:layout_width="60dp"
        android:layout_height="42dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/eyebrow"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/alis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alis"
        app:layout_constraintTop_toBottomOf="@+id/rambut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:checked="true" />

    <ImageView
        android:id="@+id/imageMata"
        android:layout_width="40dp"
        android:layout_height="41dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/eyes"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/mata"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mata"
        app:layout_constraintTop_toBottomOf="@+id/alis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:checked="true" />

    <ImageView
        android:id="@+id/imageKumis"
        android:layout_width="153dp"
        android:layout_height="130dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/moustache"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/kumis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kumis A"
        app:layout_constraintTop_toBottomOf="@+id/mata"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:checked="true" />

    <ImageView
        android:id="@+id/imageJambang"
        android:layout_width="94dp"
        android:layout_height="93dp"
        android:layout_marginTop="165dp"
        android:src="@drawable/beard"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/jambang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jambang"
        app:layout_constraintTop_toBottomOf="@+id/kumisB"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:checked="true" />

    <ImageView
        android:id="@+id/imageKumisB"
        android:layout_width="153dp"
        android:layout_height="130dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/moustache_b"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/kumisB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kumis B"
        app:layout_constraintTop_toBottomOf="@+id/kumis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:checked="false" />

    <TextView
        android:id="@+id/user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kumisB"
        android:gravity="center"
        android:text="Welcome, Your Email"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/call"
        android:layout_width="110dp"
        android:layout_height="49dp"
        android:background="@drawable/rounded"
        android:text="Telepon"
        app:layout_constraintStart_toEndOf="@+id/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jambang" />

    <Button
        android:id="@+id/web"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded"
        android:text="Web"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sms"
        app:layout_constraintTop_toBottomOf="@+id/jambang" />

    <Button
        android:id="@+id/sms"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded"
        android:text="SMS"
        app:layout_constraintEnd_toStartOf="@+id/web"
        app:layout_constraintStart_toEndOf="@+id/call"
        app:layout_constraintTop_toBottomOf="@+id/jambang" />

</androidx.constraintlayout.widget.ConstraintLayout>
